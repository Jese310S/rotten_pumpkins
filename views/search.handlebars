
{{>header}}

<!-- Main Content -->
<body>
  <div class="container">
    <h3 class= "test-center mt-5">Movie Finder</h3>
    <form id="movieForm" autocomplete = "off">
        <div class="form-group">
          <label for="Movie">Movie Search</label>
          <input class="form-control" type="text" id="movie" placeholder="Type Movie Name Here">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">
            Search
          </button>
        </div>
    </form>
    <hr>
    <div id="result">
    </div>
  </div>
</body>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
$(document).ready(function(){
    
  var apikey = "d9afbf64"

  $("#movieForm").submit(function(event){
      event.preventDefault()

      var movie = $("#movie").val()

      var result = ""

      var url = "http://www.omdbapi.com/?apikey="+apikey

      $.ajax({
        method:'Get',
        url:url+"&t="+movie,
        success:function(data){
          console.log(data)

          result = `
          <img style="float.left" class="img-thumbnail" width="200" height= "200" src="${data.Poster}"/>
          <h2>${data.Title}</h2>
          <h3>${data.Released}</h3>
          <h3>${data.Director}</h3>
          <h3>${data.Actors}</h3>
          `

          $("#result").html(result)

        }
      })

  })
})
</script>